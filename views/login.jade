extends layout

block content
	div.container.radius
		h1.page-title 
			b SIT Login
		if message_auth
			div.warning-message=message_auth
		form(name="login-form", method="post")
			div.form-group
				label Username
				input(type="text", name="username").form-control
			div.form-group
				label Password
				input(type="password", name="password").form-control
			div.form-group
				button(type="submit").btn.btn-default submit
