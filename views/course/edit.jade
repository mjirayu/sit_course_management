extends ../layout

block content
  h1 Create Course
  form(name="edit-course", method="post" action='/course/edit/#{data._id}')
    input(type="hidden" name="_method" value="put")
    div.form-group
      label Course Name
      input(type="text", name="course_name" value="#{data.course_name}").form-control
    div.form-group
      label Course ID
      input(type="text", name="course_id" value="#{data.course_id}").form-control
    div.form-group
      label Credit
      input(type="text", name="credit" value="#{data.credit}").form-control
    div.form-group
      label Department
      input(type="text", name="department" value="#{data.department}").form-control
    div.form-group
      label Prerequisite
      input(type="text", name="prerequisite" value="#{data.prerequisite}").form-control
    div.form-group
      label Recommended Year
      input(type="text", name="recommended_year" value="#{data.recommended_year}").form-control
    div.form-group
      label Description
      textarea(name="description").form-control #{data.description}
    div.form-group
      button(type="submit").btn.btn-default submit
