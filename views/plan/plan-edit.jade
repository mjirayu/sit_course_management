extends ../layout

block content
  h1 Edit #{data.plan_name} of #{data.student_id}
  form(name="edit-plan", method="post" action='/plan/edit/#{data._id}')
    input(type="hidden" name="_method" value="put")
    div.form-group
      label Status
      select(name="status").form-control
        option(value="pending") Pending
        option(value="approve") Approve
        option(value="reject") Reject
    div.form-group
      label Message
      textarea(name="message").form-control #{data.message}
    div.form-group
      button(type="submit").btn.btn-default submit
  script.
    $('select[name="status"] option').each(function(){
      if ($(this).val() == '#{data.status}'){
        $(this).attr('selected', 'selected');
      } 
    });
