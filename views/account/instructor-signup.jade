extends ../layout/admin_layout

block content
  #page-wrapper
    .container-fluid
      .row
        .col-lg-12
          h1.page-header
            | Sign Up
          ol.breadcrumb
            li.active
              i.fa.fa-user
              |  Instructors / Sign Up
      if errorMessage != ''
        .row
          .col-lg-12
            .alert.alert-danger
              ul 
              each message in errorMessage
                li= message
      .row
        .col-lg-12
          .panel.panel-default
            .panel-body
              form(name="signup-form", method="post" action='/instructors/signup')
                div.form-group
                  label Full Name
                  input(type="text", name="fullname").form-control
                div.form-group
                  label Email
                  input(type="email", name="email").form-control
                div.form-group
                  label Instructor ID
                  input(type="text", name="identity").form-control
                div.form-group
                  label Department
                  select(name="department").form-control
                    each department in departments
                      option(value="#{department._id}") #{department.name}
                div.form-group
                  label Position
                  select(name="position").form-control
                    option(value='Advisor') Advisor
                    option(value='Program Chairperson') Program Chairperson
                div.form-group
                  label Username
                  input(type="text", name="username").form-control
                div.form-group
                  label Password
                  input(type="password", name="password").form-control
                div.form-group
                  label Confirm Password
                  input(type="password", name="confirm_password").form-control
                div.form-group
                  button(type="submit").btn.btn-info Signup
