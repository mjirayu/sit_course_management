extends ../layout/admin_layout

block content
  #page-wrapper
    .container-fluid
      .row
        .col-lg-12
          h1.page-header
            | Edit Instructor
          ol.breadcrumb
            li.active
              i.fa.fa-user
              |  Instructors / Edit
      .row
        .col-lg-12
          .panel.panel-default
            .panel-body
              if message_auth
                div.warning-message=message_auth
              form(name="signup-form", method="post" action='/students/edit/plan_status/'+ data.id)
                input(type="hidden" name="_method" value="put")
                div.form-group
                  label Department
                  select(name="status").form-control
                    option(value="Approve") Approve
                    option(value="Pending") Pending
                    option(value="Reject") Reject
                div.form-group  
                  button(type="submit").btn.btn-info Update
                  a(href="/instructors/approve_plan").btn.btn-primary Back
                  
      script(type='text/javascript').
        $('select[name="status"] option').each(function(){
          if ($(this).val() == '#{data.status}'){
            $(this).attr('selected', 'selected');
          } 
        }); 
        today = new Date();
        year = today.getFullYear();   
        $('#entranced_year').val(year);
