extends ../layout/admin_layout

block content
  #page-wrapper
    .container-fluid
      .row
        .col-lg-12
          h1.page-header
            | Sign Up
            form(action="/users/csv", method="post", style="float: right; position: relative; bottom: 1em;", enctype="multipart/form-data")
              label(for="csv") Import CSV
              input(type="file", name="csv", style="font-size: 15px")
              button(type="submit", style="font-size: 15px; position: relative; bottom: 25px;") Submit
          ol.breadcrumb
            li.active
              i.fa.fa-user
              |  User / Sign Up
      .row
        .col-lg-12
          .panel.panel-default
            .panel-body
              if message_auth
                div.warning-message=message_auth
              form(name="signup-form", method="post" action='/users/signup')
                div.form-group
                  label Firstname
                  input(type="text", name="firstname").form-control
                div.form-group
                  label Lastname                    
                  input(type="text", name="lastname").form-control
                div.form-group
                  label Email
                  input(type="email", name="student_email").form-control
                div.form-group
                  label Department
                  select(name="department").form-control
                    option(value="Computer Science") Computer Science
                    option(value="Information Technology") Information Technology
                div.form-group
                  label Student_ID
                  input(type="text", name="student_id").form-control
                div.form-group
                  label Password
                  input(type="password", name="password").form-control
                div.form-group
                  label Confirm Password
                  input(type="password", name="confirm_password").form-control
                  input(type="hidden", name='entranced_year' id="entranced_year")
                div.form-group
                  button(type="submit").btn.btn-info Signup

      script(type='text/javascript').
        today = new Date();
        year = today.getFullYear();   
        $('#entranced_year').val(year);
