extends ../layout/admin_layout

block content
  #page-wrapper
    .container-fluid
      .row
        .col-lg-12
          h1.page-header
            | Sign Up
          ol.breadcrumb
            li.active
              i.fa.fa-user
              |  User / Sign Up
      .row
        .col-lg-12
          .panel.panel-default
            .panel-body
              if message_auth
                div.warning-message=message_auth
              form(name="signup-form", method="post" action='/users/signup')
                div.form-group
                  label Fullname
                  input(type="text", name="fullname").form-control
                div.form-group
                  label Email
                  input(type="email", name="student_email").form-control
                div.form-group
                  label Department
                  select(name="department").form-control
                    option(value="Computer Science") Computer Science
                    option(value="Information Technology") Information Technology
                div.form-group
                  label Plan
                  select(name="plan_id").form-control
                    option(value="CS Plan 56") CS Plan 56
                    option(value="CS Plan 55") CS Plan 55
                div.form-group
                  label Student_ID
                  input(type="text", name="student_id").form-control
                div.form-group
                  label Username
                  input(type="text", name="username").form-control
                div.form-group
                  label Password
                  input(type="password", name="password").form-control
                div.form-group
                  label Confirm Password
                  input(type="password", name="confirm_password").form-control
                  input(type="hidden", name='entranced_year' id="entranced_year")
                div.form-group
                  button(type="submit").btn.btn-info Signup

      script(type='text/javascript').
        today = new Date();
        year = today.getFullYear();   
        $('#entranced_year').val(year);
